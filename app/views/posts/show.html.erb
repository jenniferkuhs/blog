<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @post.name %>
</p>

<p>
  <strong>Category:</strong>
<ul>
	<%- @post.categories.each do |category| %>
	<li><%= category.name %></li>
	<% end %>
</ul>

<p>
  <strong>Content:</strong>
  <%= @post.content %>
</p>

<p>
  <strong>Featured image:</strong>
  <%= @post.featured_image %>
</p>

<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>
